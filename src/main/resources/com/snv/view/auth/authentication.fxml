<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" contentText="%title" prefHeight="200.0" prefWidth="360.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="com.snv.controllers.UsersController">
    <content>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="%identifier"/>
                <TextField fx:id="login" promptText="%identifier" GridPane.columnIndex="1"/>
                <Label text="%password" GridPane.rowIndex="1"/>
                <PasswordField fx:id="password" promptText="%password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <buttons>
                        <Button defaultButton="true" mnemonicParsing="false" text="%validate" onAction="#login"/>
                        <Button cancelButton="true" mnemonicParsing="false" text="%cancel"/>
                    </buttons>
                </ButtonBar>
            </children>
        </GridPane>
    </content>
</DialogPane>
